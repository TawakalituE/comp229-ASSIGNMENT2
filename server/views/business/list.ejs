
<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
  
  <!-- Main Content -->
  <main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-11">
            <h1><%= title %></h1>
            <% if (typeof displayName == 'string' && displayName) { %>
            <a href="/business-list/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add a Business</a>
            <% } %>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row -->
                <tr class="d-flex">
                    <% if (typeof displayName == 'string' && displayName) { %>
                        <th class="text-center col-2">Name</th>
                        <th class="text-center col-2">Email</th>
                        <th class="text-center col-1">Field</th>
                        <th class="col-4">Description</th>
                        <th class="text-center col-1">Levy</th>
                        <th class="text-center col-1"></th>
                        <th class="text-center col-1"></th>
                    <% } else { %>
                        <th class="text-center col-2">Name</th>
                        <th class="text-center col-2">Email</th>
                        <th class="text-center col-1">Field</th>
                        <th class="col-6">Description</th>
                        <th class="text-center col-1">Levy</th>
                    <% } %>
                </tr>
                <!-- Repeatable Template Row -->
                <% for(let count = 0; count < BusinessList.length; count++) { %>
                    <tr class="d-flex">
                        <% if (typeof displayName == 'string' && displayName) { %>
                            <td class="text-center col-2"><%= BusinessList[count].name %></td>
                            <td class="text-center col-2"><%= BusinessList[count].email %></td>
                            <td class="text-center col-1"><%= BusinessList[count].field %></td>
                            <td class="col-4"><%= BusinessList[count].description %></td>
                            <td class="text-center col-1"><%= BusinessList[count].levy %></td>
                            <td class="text-center col-1">
                                <a href="/Business-list/update/<%= BusinessList[count]._id %>" class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i> Update</a>
                            </td>
                            <td class="text-center col-1">
                                <a href="/Business-list/delete/<%= BusinessList[count]._id %>" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                        <% } else { %>
                            <td class="text-center col-2"><%= BusinessList[count].name %></td>
                            <td class="text-center col-2"><%= BusinessList[count].email %></td>
                            <td class="text-center col-1"><%= BusinessList[count].field %></td>
                            <td class="col-6"><%= BusinessList[count].description %></td>
                            <td class="text-center col-1"><%= BusinessList[count].levy %></td>
                        <% } %>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </main>
  
<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>