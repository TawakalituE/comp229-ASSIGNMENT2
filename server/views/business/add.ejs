
<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Business Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Business Title"
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the Email's Address"
                    name="email" required>
                </div>

                <div class="form-group">
                    <label for="fieldTextField">field</label>
                    <input type="text" class="form-control"
                    id="fieldTextField"
                    placeholder="Enter your field"
                    name="field" required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Description</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter your Description "
                    name="description" required></textarea>
                </div>

                <div class="form-group">
                    <label for="levelTextField">Levy</label>
                    <input type="text" class="form-control"
                    id="levelTextField"
                    placeholder="Enter your business Levy"
                    name="price" required>
                </div>

                <br>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-sync-alt"></i> Submit</button>

                <a href="/business-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>
            </form>
        </div>
    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>